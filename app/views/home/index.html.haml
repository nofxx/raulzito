- content_for :head do
  = javascript_include_tag 'app/tabs', 'jquery/ui.core', 'jquery/ui.tabs'

.block
  - if current_user
    #tabs
      %ul
        %li= link_to "Todas", "#fragment-1"
        %li= link_to "Notas", "#fragment-2"
        %li= link_to "Mensagens", "#fragment-3"
        %li= link_to "Análise", "#fragment-4"
      .clear
      #fragment-1
        %h2 SIG@
        .inner
          %p{:class => :first}
            = "Olá, #{current_user.name}."
            = link_to pluralize(@messages, "mensagem", "mensagens"), "/inbox", :class => "icon imail"
      #fragment-2
        %h2 SIOOO
        .inner
          %p{:class => :first}
            = "Olá, #{current_user.name}."
            = link_to pluralize(@messages, "mensagem", "mensagens"), "/inbox", :class => "icon imail"
