<h1>Listing openings</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Move queue</th>
  </tr>

<% @openings.each do |opening| %>
  <tr>
    <td><%=h opening.name %></td>
    <td><%=h opening.move_queue %></td>
    <td><%= link_to 'Show', opening %></td>
    <td><%= link_to 'Edit', edit_opening_path(opening) %></td>
    <td><%= link_to 'Destroy', opening, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New opening', new_opening_path %>